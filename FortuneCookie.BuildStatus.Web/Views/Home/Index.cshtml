@using FortuneCookie.BuildStatus.Web.Models
@model BuildStatusViewModel

<!DOCTYPE html>
<html>
    <head>
        <title>Is the build broken?</title>
        <link id="favicon" rel="shortcut icon" href="/Content/@Model.CurrentBuildStatus.ToLower()-icon.png" />
        <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
        <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/functions.js")" type="text/javascript"></script>
        <script type="text/javascript">
            var statusAddress = '@Url.Action("CurrentStatusFragment")';
            var summaryAddress = '@Url.Action("Summary")';
        </script>
    </head>

    <body>
        <div class="header">
            <img alt="Is the build broken?" src="/Content/notconnected-icon.png" />
            <h1>Is the build broken?</h1>
        </div>
        <div id="status" class="full">
            @Html.Partial(Model.CurrentBuildStatus, Model)
        </div>
        <div id="summary">
            @Html.Partial("Summary", Model.DetailsViewModel)
        </div>

    </body>

</html>

